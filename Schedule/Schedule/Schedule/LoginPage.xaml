<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Schedule.LoginPage"
             Title="登录" >
    <ContentPage.Content>
        <StackLayout>
            <Label Text="学号：" />
            <Entry x:Name="iD" Keyboard="Numeric"/>
            <Label Text="教务系统密码：" />
            <Entry x:Name="passWord"  Keyboard="Numeric" IsPassword="True" />
            <Label Text="验证码：" />
            <Image  x:Name="pId" Source= "{Binding ISource}" Scale="4" />
            <Entry x:Name="key"/>
            <Button Text="登录" Clicked="LoginOnCall" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>